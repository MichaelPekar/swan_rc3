.container
  %h3{:align => "center"}
    = @news.title
  %pre
    Create at: #{@news.created_at.strftime("%d.%m.%Y at %H:%M")}           Author:
  %div{:style => "border-bottom:1px solid #cccccc; margin-bottom:10px"}
    = @news.body.html_safe
  %p
    = link_to 'Back', 'javascript:history.back()', class: "btn btn-large btn-primary"